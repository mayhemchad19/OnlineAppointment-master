<!DOCTYPE html>
<html ng-app="OnlineAppointment">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/Home/app.js"></script>


    @*<script src="~/Scripts/jquery-3.4.1.min.js"></script>*@
    @*<link href="~/Content/css/jquery.dataTables.css" rel="stylesheet" />*@
    @*<script src="~/Scripts/DataTable/jquery.dataTables.js"></script>*@


    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/dataTables.bootstrap.min.css" rel="stylesheet" />
    @*<link href="~/Content/bootstrap-theme.css" rel="stylesheet" />*@
    @*<link href="~/Content/css/jquery.dataTables.css" rel="stylesheet" />
        <script src="~/Scripts/DataTable/jquery.dataTables.js"></script>*@


    <link href="~/Content/DataTable/css/dataTables.bootstrap.min.css" rel="stylesheet" />


    @*searchbootstrap*@
    <link href="~/Content/bootstrap-chosen.css" rel="stylesheet" />

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("ViVi", "Index", "EmployeeHome", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @*<li>@Html.ActionLink("Home", "Index", "EmployeeHome")</li>*@
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Appointment <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Today's Appointment", "Index", "EmployeeAppointments")</li>

                            <li class="divider"></li>
                            <li>@Html.ActionLink("Upcoming Appointment", "PendingAppointments", "EmployeeAppointments")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Set Appointment", "Create", "EmployeeAppointments")</li>
                        </ul>
                    </li>
                    @*EmployeeAppointments*@
                    @*<li>@Html.ActionLink("About", "About", "EmployeeHome")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "EmployeeHome")</li>*@

                    @*<li>@Html.ActionLink("User", "Index", "EmployeeUsers")</li>*@
                    <li>@Html.ActionLink("Product", "Index", "EmployeeProducts")</li>
                    <li class="dropdown">

                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Invoice/Sales <span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Create Invoice", "Invoice", "EmployeeBilling")</li>

                            <li class="divider"></li>
                            <li>@Html.ActionLink("Invoice List", "InvoiceList", "EmployeeBilling")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Confirm Sales", "BillingIndex", "EmployeeBilling")</li>
                        </ul>
                    </li>
                    </li>
                    @*<li>@Html.ActionLink("Transaction", "Index", "EmployeeOrders")</li>*@






                </ul>

                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Register", "Create", "CustomerRegistration")</li>
                    <li>@Html.ActionLink("Logout", "Login", "Logs")</li>
                </ul>

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        @*<footer>
                <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
            </footer>*@
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    @*<script src="~/Scripts/DataTable/jquery.dataTables.min.js"></script>
    <script src="~/Scripts/DataTable/dataTables.bootstrap.min.js"></script>*@

    <script src="~/Scripts/jquery-3.4.1.js"></script>
    <script src="~/Content/jquery.dataTables.min.js"></script>
    <script src="~/Content/dataTables.bootstrap.min.js"></script>

    @*searchbootstrap*@
    <script src="~/Scripts/chosen.jquery.js"></script>

    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });
    </script>


</body>
</html>
