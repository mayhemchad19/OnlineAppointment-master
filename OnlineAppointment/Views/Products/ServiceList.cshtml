@model IEnumerable<OnlineAppointment.Models.Product>

@{
    ViewBag.Title = "ServiceList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Services</h2>

<p>
    @Html.ActionLink("Add New Service", "Create")
</p>
<div class="col-md-12">

    <table class="table table-striped table-bordered" id="example" align="center">
        <thead align="center">
            <tr>
                @*<th>
                        @Html.DisplayNameFor(model => model.ProductType.ProductTypeName)
                    </th>*@
                <th>
                    Service Name
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductPrice)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ProductDescription)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.ProductStatus)
                    </th>*@
               
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                @*<td>
                        @Html.DisplayFor(modelItem => item.ProductType.ProductTypeName)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    ₱ @Html.DisplayFor(modelItem => item.ProductPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductDescription)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.ProductStatus)
                    </td>*@
                @*<td>
                        @Html.ActionLink("Edit", "Edit", new { id=item.ProductID }) |
                        @Html.ActionLink("Details", "Details", new { id=item.ProductID }) |
                        @Html.ActionLink("Delete", "Delete", new { id=item.ProductID })
                    </td>*@
            </tr>
            }
        </tbody>
    </table>

</div>