@model IEnumerable<OnlineAppointment.Models.Appointment>

@{
    ViewBag.Title = "Index";
}
<br />

<div class="panel panel-default">
    <div class="panel-heading">
        <h3 class="panel-title">Appointment List</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-bordered col-md-12" id="example" align="center">
            <thead>
                <tr>
                    <th>
                        Schedule Time Slot
                    </th>
                    <th>
                        Date
                    </th>
                    <th>
                        Customer
                    </th>
                    <th>
                        Status
                    </th>
                    <th>
                        Actions
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Slot.Schedule)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AppointmentDate)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AppointmentState.AppointmentStatus)
                        </td>
                        <td>
                            <a href="@Url.Action("Create", "AppointmentDetails", new { id = item.AppointmentId })" class="btn btn-xs btn-success" title="Avail Services/Products"><span class="fa fa-cart-plus"></span> Avail</a>
                            <a href="@Url.Action("Edit", "Appointments", new { id = item.AppointmentId })" class="btn btn-xs btn-warning" title="Update Appointment"><span class="fa fa-pencil"></span> Update</a>
                            <a href="@Url.Action("Reschedule", "Appointments", new { id = item.AppointmentId })" class="btn btn-xs btn-danger" title="Reschedule Appointment"><span class="fa fa-calendar"></span> Reschedule</a>
                            <a href="@Url.Action("Index", "AppointmentDetails", new { id = item.AppointmentId })" class="btn btn-xs btn-default" title="View Availed Services/Products"><span class="fa fa-eye"></span> View</a>
                            <a href="@Url.Action("Index", "AppointmentDetails", new { id = item.AppointmentId })" class="btn btn-xs btn-default" style="background-color:cadetblue" title="Notify Customer"><span class="fa fa-comment"></span> Notify</a>
                            <a href="@Url.Action("Index", "AppointmentDetails", new { id = item.AppointmentId })" class="btn btn-xs btn-default" style="background-color:cadetblue" title="Notify Customer"><span class="fa fa-file"></span> Generate Bill</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
