@model IEnumerable<OnlineAppointment.Models.Slot>
@{
    ViewBag.Title = "Index";
}

<br />
<h2>Slots</h2>
<a class="btn btn-sm btn-success" href="@Url.Action("Create","Slots")">Create New Slot</a>
<hr />
<div class="col-lg-12">
    <table class="table table-striped table-bordered" id="example">
        <thead>
            <tr>
                <th>
                    Description
                </th>
                <th>
                    Available Slot
                </th>
                <th>
                    Start Time
                </th>
                <th>
                    End Time
                </th>
                <th>
                    Actions
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Time)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AvailableSlot)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndTime)
                </td>
                <td>
                    <a href="@Url.Action("Edit", "Edit", new { id = item.SlotsID })" class="btn btn-xs btn-warning" title="Update"><span class="fa fa-pencil"></span> Update</a>
                </td>
            </tr>
            }
        </tbody>
    </table>

</div>