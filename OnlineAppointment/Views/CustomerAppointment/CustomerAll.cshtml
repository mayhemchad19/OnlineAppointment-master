@model IEnumerable<OnlineAppointment.Models.Appointment>

@{
    ViewBag.Title = "CustomerAll";
    Layout = "~/Views/Shared/_CustomerLayout.cshtml";
}
<br />
<br />
<h2>All Appointments</h2>

<p>
    @Html.ActionLink("Set New Appointment", "Create")
</p>
<table id="example" class="table table-striped table-bordered">
    <thead>

        <tr>
            <th>
                Date
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Slot.Time)
            </th>
            <th>
              Status
            </th>
            <th>
                Service
            </th>

            @*<th>
            @Html.DisplayNameFor(model => model.User.Username)
        </th>*@

            <th>
            @Html.DisplayNameFor(model => model.Reason)
        </th>
        @*<th></th>*@
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Slot.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AppointmentState.AppointmentStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.ProductName)
            </td>

            @*<td>
            @Html.DisplayFor(modelItem => item.User.Username)
        </td>*@

            <td>
            @Html.DisplayFor(modelItem => item.Reason)
        </td>
        @*<td>
            @Html.ActionLink("Edit", "Edit", new { id = item.AppointmentId }) |
            @Html.ActionLink("Details", "Details", new { id = item.AppointmentId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.AppointmentId })
        </td>*@
        </tr>
        }

    </tbody>

</table>
