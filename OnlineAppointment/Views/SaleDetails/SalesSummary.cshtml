@model IEnumerable<OnlineAppointment.Models.SaleDetail>

@{
    ViewBag.Title = "SalesSummary";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@{
    ViewBag.Title = "Index";
}
<br />
<br />
<h2>Sales Summary</h2>
<h4> from @ViewBag.Start to @ViewBag.End</h4>


@using (Html.BeginForm("Search", "SaleDetails"))
{



    @*<div class="row" style="flex-direction: row;">*@
    <div class="col-lg-12" align="center">
        <span>Start Date:</span>
        <input type="date" name="start" />
        <span>End Date:</span>
        <input type="date" name="end" /><br />
        <input style="margin-top:10px; max-width:120px" type="submit" value="Search" class="btn btn-block btn-primary btn-xs       />
        <br />
    </div>

    <br />
    <br />



    <div class="col-lg-12" align="center">
        <br />
        <a href="~/SaleDetails/SalesSummary" class="btn btn-primary btn-xs">All Sales</a>
        <a href="~/SaleDetails/Today" class="btn btn-primary btn-xs">Today</a>
        <a href="~/SaleDetails/recentWeek" class="btn btn-primary btn-xs">Last 7 days</a>
        <a href="~/SaleDetails/recentMonth" class="btn btn-primary btn-xs">Last 30 days</a>
        <a href="~/SaleDetails/recentYear" class="btn btn-primary btn-xs">Last 365 days</a>
    </div>


    <br />
    <table id="example" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    Sales Number
                </th>
                <th>
                    Date
                </th>
                <th>
                    Customer
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Product.ProductName)
                </th>
                <th>
                    Unit Price
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Quantity)
                </th>
                <th>
                    Item Discount
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>

                @*<th>Discount</th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sale.OrderNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sale.OrderDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Sale.User.FirstName)
                        @Html.DisplayFor(modelItem => item.Sale.User.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Product.ProductName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UnitPrice)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Quantity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Discount)
                    </td>
                    <td>
                        ₱ @Html.DisplayFor(modelItem => item.Total)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Sale.DiscountType.DiscountTypeName)
                        </td>*@

                    @*<td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.OrderDetailID }) |
                            @Html.ActionLink("Details", "Details", new { id = item.OrderDetailID }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.OrderDetailID })
                        </td>*@
                </tr>
            }

        </tbody>
        <thead>
        <th>
            Total
        </th>
        <th>
        </th>
        <th>
        </th>
        <th>
        </th>
        <th>
        </th>
        <th>
            @Model.Sum(i => i.Quantity)
        </th>
        <th>
            @*₱ @Model.Sum(i => i.Sale.FinalTotal)*@
        </th>
        <th>
            ₱ @Model.Sum(i => i.Total)
        </th>
        @*<th>
                ₱ @Model.Sum(i => i.Sale.DiscountedTotal)
            </th>*@
        </thead>
    </table>

}
<div style="display: flex; flex-direction: column; align-items: flex-end; ">

    <a href="~/SaleDetails/report" class="btn btn-primary btn-primary">Print</a>
</div>
<div style="display: flex; flex-direction: column; align-items: flex-start; ">

    <strong>
        Date: @DateTime.Now

    </strong>
</div>

</div>



